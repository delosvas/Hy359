<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
       <servlet>
        <servlet-name>GetUser</servlet-name>
        <servlet-class>servlets.GetUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InitDB</servlet-name>
        <servlet-class>servlets.InitDB</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteDB</servlet-name>
        <servlet-class>servlets.DeleteDB</servlet-class>
    </servlet>
   
    <servlet>
        <servlet-name>NewServlet</servlet-name>
        <servlet-class>servlets.NewServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>register_user</servlet-name>
        <servlet-class>servlets.register_user</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>register_volunteer</servlet-name>
        <servlet-class>servlets.register_volunteer</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login_user</servlet-name>
        <servlet-class>servlets.login_user</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>info_user</servlet-name>
        <servlet-class>servlets.info_user</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logout_user</servlet-name>
        <servlet-class>servlets.logout_user</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>registerIncidentServlet</servlet-name>
        <servlet-class>servlets.registerIncidentServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>NewServlet</servlet-name>
        <url-pattern>/NewServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetUser</servlet-name>
        <url-pattern>/GetUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InitDB</servlet-name>
        <url-pattern>/InitDB</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteDB</servlet-name>
        <url-pattern>/DeleteDB</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>register_user</servlet-name>
        <url-pattern>/register_user</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>register_volunteer</servlet-name>
        <url-pattern>/register_volunteer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login_user</servlet-name>
        <url-pattern>/login_user</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>info_user</servlet-name>
        <url-pattern>/info_user</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logout_user</servlet-name>
        <url-pattern>/logout_user</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>registerIncidentServlet</servlet-name>
        <url-pattern>/registerIncidentServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
